 	Tutku GÜNDÜZLÜ
 	Yıldızlarla dikdörtgen 
 */

package Operatörler;

public class dikdörtgen {

	public void sekil(char karakter) {
		for(int i=0; i<4; i++) {
			
			for(int j=0; j<8; j++) {
				if(i==0 || i==3)
					System.out.print(karakter);
				else if(j>0 && j<7)
					System.out.print(" ");
				else
				System.out.print(karakter);
		}
			System.out.println(" ");
		}
		
	}
	public static void main(String[] args) {
		dikdörtgen n=new dikdörtgen();
		n.sekil('*');
	}

}
