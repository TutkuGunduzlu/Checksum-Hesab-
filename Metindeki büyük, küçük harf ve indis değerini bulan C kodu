	Tutku Gündüzlü
	Metindeki büyük, küçük harf ve indis değerini bulan C kodu
*/
#include <stdio.h>
#include <conio.h>

int main()
{ 
    char a[]={"AaacprogramlAMAderSİNdenKaLDıM"};
    int i,x=0,y=0;
    
    for(i=0;i<40;i++)
	 {
        if(a[i]=='a') 
		{
            x++;
            printf("%d. indiste a goruldu\n",i); 
		}
        if(a[i]=='A')
	    {
            y++;
            printf("%d.indiste A goruldu\n",i); 
	    }
     }
        printf("\n%d tane %c var.\n",x,97);
        printf("%d tane %c var.\n",y,65);
                      
                      
  getch();	
  return 0;
}
